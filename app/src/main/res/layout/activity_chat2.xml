<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="30dp"
    tools:context="com.av.mirror.quickdeal.Chat2">


    <ImageView  android:id="@+id/deal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dealcolor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEAL DONE?"
        android:textSize="30dp"
        android:maxWidth="300dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/deal"
        android:layout_alignStart="@+id/deal" />

    <ImageView android:id="@+id/yes"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/yes"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="190dp"
        android:layout_marginBottom="5dp"
        />

    <ImageView  android:id="@+id/notyet"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/notyet"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="5dp"
        />
</android.support.v7.widget.CardView>
